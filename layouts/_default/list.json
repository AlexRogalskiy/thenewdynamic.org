{{- $.Scratch.Add "index" slice -}}
{{$content := where (where .Site.RegularPages ".Section" "tool") ".Params.private" "ne" true}}
{{- range $content -}}
  {{- $.Scratch.Add "index" (dict "title" .Title "date" (.Date.Format "January 2, 2006") "sort_date" .Date.Unix "uri" .RelPermalink "description" .Params.description "language" .Params.language "category" .Params.tools "license" .Params.license "tool_type" (index .Params.tools) "tags" .Params.tags "data_model" .Params.data_model "content" (.Plain | truncate 300)) -}}
{{- end -}}

{{- .Scratch.SetInMap "data" "items" (.Scratch.Get "index") -}}
{{- .Scratch.SetInMap "output" "data" (.Scratch.Get "data") -}}

{{- $.Scratch.Get "output" | jsonify -}}