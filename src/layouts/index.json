{{- $.Scratch.Add "index" slice -}}
{{$content := where (where .Site.RegularPages ".Section" "not in"  (slice "tools")) ".Params.private" "ne" true}}
{{- range $content -}}
  {{- $.Scratch.Add "index" (dict "Section" (.Section | pluralize) "title" .Title "objectID" (md5 .File.Path) "uri" .RelPermalink "description" .Params.description "authors" .Params.authors "category" .Params.tools "license" .Params.license "tool" .Params.tool "related_tools" .Params.related_tools "source" .Params.source "data_model" .Params.data_model "content" (.Plain | truncate 300)) -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}
